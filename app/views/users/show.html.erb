<%= provide(:title, @user.name) %>

<div class="row">
<div class="container">
  <aside class="span4">
  	<section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="span12 offset10">
    <button class="btn btn-primary" type="button"><%= link_to "New Account", new_account_path %>
    </button>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th style="width: 30%">Account</th>
        <th style="width: 17.5%">Overdue</th>
        <th style="width: 17.5%">Active</th>
        <th style="width: 17.5%">Waiting on payment</th>
        <th style="width: 17.5%">Closed</th>
      </tr>
    </thead>

    <tbody>
      <% @account.each do |account| %>
        <td><%= link_to account.name, url_for(account)  %></td>
        <td><%= account.invoices.where(status: "Overdue").count %> | $<%= account.invoices.where(status: "Overdue").sum(:amount).to_i %></td>
        <td><%= account.invoices.where(status: "Active").count %> | $<%= account.invoices.where(status: "Active").sum(:amount).to_i %></td>
        <td><%= account.invoices.where(status: "waiting_on_payment").count %> | $<%= account.invoices.where(status: "waiting_on_payment").sum(:amount).to_i %></td>
        <td><%= account.invoices.where(status: "Closed").count %> | $<%= account.invoices.where(status: "Closed").sum(:amount).to_i %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>